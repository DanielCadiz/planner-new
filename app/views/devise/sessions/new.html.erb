<link rel="stylesheet" href="form.css">

<div class="bg"></div>
<div class="bg bg2"></div>
<div class="bg bg3"></div>

<div class="form">
  <div class="title">badumTASKS</div>
  <div class="subtitle">Log In</div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field input-container ic1">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", id: "firstname", type: "text", placeholder: " " %>
      <div class="cut"></div>
      <%= f.label :email, for: "firstname", class: "placeholder" %>
    </div>

    <div class="field input-container ic2">
      <%= f.password_field :password, autocomplete: "current-password", id: "lastname", class: "input", type: "password", placeholder: " " %>
      <div class="cut"></div>
      <%= f.label :password, for: "lastname", class: "placeholder" %>
    </div><br>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "subtitle" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "submit" %>
    </div><br>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
